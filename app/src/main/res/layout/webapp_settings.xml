<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/webapp_settings">

    <Switch
        android:id="@+id/switchOpenUrlExternal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:text="Open links in external browser" />
    <Switch
        android:id="@+id/switchCreateShortcut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:checked="true"
        android:text="Create shortcut on home screen" />

    <Switch
        android:id="@+id/javascript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:checked="true"
        android:text="Allow Javascript" />
    <Switch
        android:id="@+id/cookies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:checked="true"
        android:text="Allow Cookies" />

    <Switch
        android:id="@+id/restorePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:checked="true"
        android:text="Restore last opened page" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:text="Timeout for page restore (in minutes)"/>
        <EditText
            android:id="@+id/websiteTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            android:text="10"
            android:inputType="number" />

    </LinearLayout>
    <Button
        android:id="@+id/recreateShortcut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Re-Create shortcut" />

</LinearLayout>
